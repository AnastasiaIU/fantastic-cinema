<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="6.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.UI.LoginController">
    <Label text="Login" textFill="#969696">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
      <VBox.margin>
         <Insets bottom="20.0" top="15.0" />
      </VBox.margin></Label>
    <Label text="Username:" />
    <TextField fx:id="usernameTF" maxWidth="250" />
    <Label text="Password:" />
    <PasswordField fx:id="passwordPF" maxWidth="250" />
    <Label fx:id="promptLbl" text="Wrong username or password. Please, try again." textFill="RED" visible="false" />
    <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="5.0" left="25.0" right="25.0" top="5.0" />
      </padding></Button>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
